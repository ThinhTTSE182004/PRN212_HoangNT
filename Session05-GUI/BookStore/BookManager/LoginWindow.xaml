<Window x:Class="BookManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManager"
        mc:Ignorable="d"
        Title="Login Window" Height="450" Width="850" Background="#C73636" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Height="auto" Margin="372,26,0,0" VerticalAlignment="Top" Width="auto" Style="{StaticResource LargerLabel}"/>

        <Label Content="Email" HorizontalAlignment="Left" Height="34" Margin="44,117,0,0" VerticalAlignment="Top" Width="64"/>

        <Label Content="Password" HorizontalAlignment="Left" Height="auto" Margin="44,0,0,0" VerticalAlignment="Center" Width="auto"/>

    </Grid>
</Window>
