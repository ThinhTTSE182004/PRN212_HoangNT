<Window x:Class="BookManagerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagerGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="red">
    <Grid>
        <Button x:Name="btn_LoadData" Content="Load" HorizontalAlignment="Left" Height="32" Margin="27,23,0,0" VerticalAlignment="Top" Width="99" Click="btn_LoadData_Click"/>

        <DataGrid x:Name="dg_Book" HorizontalAlignment="Center" Height="292" VerticalAlignment="Center" Width="596" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="BookId" Binding="{Binding BookId}" Width="*"/>
                <DataGridTextColumn Header="BookName" Binding="{Binding BookName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="PublicationDate" Binding="{Binding PublicationDate}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="BookGenreType" Binding="{Binding Category.BookGenreType}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
